using TaffyScript.Threading;

namespace TaffyScript.Threading.Tests {
    script main() {
        print("Main Thread: {0}", thread_get_id());
        var key = new ThreadLock();
        var token = new TaskCancellationToken();
        var task = script {
            key.lock();
            thread_sleep(1000);
            key.unlock();
            token.throw_if_cancelled();
            print(thread_get_id());
        }
        token.cancel_after(1500);
        token.register(script { print("cancelled")});
        var t1 = task_run(task, token);
        var t2 = task_run(task, token);
        var result = task_wait_all(t1, t2);
        if(result != "")
            print(result);
        t1.dispose();
        t2.dispose();


        task = script {
            print(thread_get_id());
        }

        t1 = task_run(task);
        t2 = task_run(task);
        var result = task_wait_all(t1, t2);
        t1.dispose();
        t2.dispose();
    }

